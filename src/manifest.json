{
  "name": "Prompt Picker",
  "description": "Type a keyword, pick a prompt, copy with one click.",
  "version": "1.1.0",
  "manifest_version": 3,

  "permissions": ["clipboardWrite", "storage", "downloads", "activeTab", "scripting"],

  "host_permissions": [
    "https://chatgpt.com/*"
  ],

  "action": {
    "default_title": "Prompt Picker",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },

  "options_page": "options.html"
}